<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zz.blog.mapper.AuthorMapper">

	<!-- 通用查询映射结果 -->
	<resultMap id="BaseResultMap" type="com.zz.blog.pojo.Author">
		<id column="id" property="id" />
		<result column="author_name" property="authorName" />
		<result column="author_age" property="authorAge" />
		<result column="author_nickname" property="authorNickname" />
		<result column="author_profession" property="authorProfession" />
		<result column="author_nowaddress" property="authorNowaddress" />
		<result column="author_email" property="authorEmail" />
		<result column="author_introduction" property="authorIntroduction" />
		<result column="author_isDelete" property="authorIsDelete" />
		<result column="author_leavingMessage_id" property="authorLeavingMessageId" />
	</resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, author_name AS authorName, author_age AS authorAge, author_nickname AS authorNickname, author_profession AS authorProfession, author_nowaddress AS authorNowaddress, author_email AS authorEmail, author_introduction AS authorIntroduction, author_isDelete AS authorIsDelete, author_leavingMessage_id AS authorLeavingMessageId
    </sql>

</mapper>
